
@model List<TCC.Web.Models.TreinamentoViewModel>
@{
    ViewBag.Title = "Cadastro de Treinamento";
}
<div class="content">
    <div class="main-header">
        <h2>Cadastro de Treinamentos</h2>
        <span class="text-titulo"> AULAS EM GRUPO</span>
    </div>
    <div class="main-content">
        <div class="widget">
            <div class="widget-header">
                <h3><i class="fa fa-edit"></i>Cadastro de Treinamentos</h3>
            </div>
            <div class="widget-content">
                <form id="treinamentoForm" class="forms-elements">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <select id="idEmpresa" name="idEmpresa" class="form-control" placeholder="Empresa" readonly="readonly"></select>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <select id="idColaborador" name="idColaborador" class="form-control" placeholder="Instrutor"></select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input type="text" id="descricao" name="descricao" class="form-control" placeholder="Nome da Aula">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <input type="text" id="local" name="local" class="form-control" placeholder="Sala da Aula">
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <select id="diaSemana" name="diaSemana" class="form-control" multiple="multiple"></select>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <div class="input-group bootstrap-timepicker">
                                    <input type="text" id="periodoInicial" name="periodoInicial" placeholder="Periodo Inicial" class="form-control timepicker required">
                                    <span class="input-group-addon">
                                        <i class="fa fa-clock-o"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-2">
                            <div class="form-group">
                                <div class="input-group bootstrap-timepicker">
                                    <input type="text" id="periodoFinal" name="periodoFinal" placeholder="Periodo Final" class="form-control timepicker required">
                                    <span class="input-group-addon">
                                        <i class="fa fa-clock-o"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="pull-right">
                                <button id="btnNovo" class="btn btn-default btn-cons m-b-10" type="button" style="display:none">
                                    <i class="fa fa-plus"></i> <span class="bold">Novo</span>
                                </button>
                                <button id="btnSalvar" class="btn btn-success btn-cons m-b-10" type="button">
                                    <i class="fa fa-save"></i> <span class="bold">Salvar</span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" id="Id" name="Id" />
                </form>
                <hr class="inner-separator">
                <div class="row">
                    <div class="col-md-12">
                        <div id="panel">
                            @Html.Partial("_Table", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_ModalDelete")

@section scripts{
    <script>
        $("body").removeClass().addClass("forms-elements");

    </script>
    <script src="~/assets/js/king-elements.js"></script>
    <script src="~/Scripts/Util/crud-base.js"></script>
    <script src="~/Scripts/Util/baseJs.js"></script>
    <script src="~/Scripts/Util/address.js"></script>
    <script src="~/Scripts/Cadastro/treinamento.js"></script>
}
